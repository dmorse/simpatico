MdSimulation{
  FileMaster{
    inputPrefix                          in/
    outputPrefix                        out/ 
  }
  nAtomType                              1
  nBondType                              1
  atomTypes                              A       1.0
  maskedPairPolicy                MaskBonded
  SpeciesManager{

    Homopolymer{
      moleculeCapacity                     100
      nAtom                                  8
      atomType                               0
      bondType                               0
    }

  }
  Random{
    seed                              10732192
  }
  MdSystem{
    pairStyle                        LJPair
    bondStyle                  HarmonicBond
    MdPairPotential{
      epsilon               1.000000000000e+00 
      sigma                 1.000000000000e+00 
      cutoff                1.122460000000e+00 
      PairList{
        atomCapacity                        1000
        pairCapacity                        5000
        skin                  2.500000000000e-01
      }
    }
    BondPotential{
      kappa                 2.000000000000e+03
      length                1.000000000000e+00
    }
    EnergyEnsemble{
      type                          isothermal
      temperature              1.0000000000000 
    }
    BoundaryEnsemble{
      type                               rigid
    }
    NvtNhIntegrator{
       dt                   5.000000000000e-03
       tauT                 1.00000000e+00
    }
  }
  AnalyzerManager{
    baseInterval                          10

    LogProgress{
      interval                          2000
    }

    MdEnergyOutput{
      interval                          1000
      outputFileName               energyOut
    }

    MdEnergyAnalyzer{
      interval                           100
      outputFileName                  energy
      nSamplePerBlock                      1
    }

    MdPotentialEnergyAverage{
      interval                           100
      outputFileName      potentialEnergyAve
      nSamplePerBlock                     10
    }

    MdKineticEnergyAverage{
      interval                           100
      outputFileName        kineticEnergyAve
      nSamplePerBlock                     10
    }

    MdPressureAverage{
      interval                           100
      outputFileName             pressureAve
      nSamplePerBlock                     10
    }

    RadiusGyration{
      interval                           100
      outputFileName          RadiusGyration
      nSamplePerBlock                     10
      speciesId                            0
    }

    RDF{
      interval                          5000
      outputFileName                     RDF
      max                                4.0
      nBin                               400
      selector                         inter   -1    -1
    }

    BondLengthDist{
      interval                           100
      outputFileName          BondLengthDist
      speciesId                            0
      min                                0.0
      max                                2.0
      nBin                               100
    }

    AtomMSD{
      interval                           100
      outputFileName                 AtomMSD
      speciesId                            0
      atomId                               5
      capacity                           100
    }

    IntraPairAutoCorr{
      interval                           100
      outputFileName       IntraPairAutoCorr
      speciesId                            0
      atom1Id                              0
      atom2Id                              7 
      capacity                           100
    }

    MdIntraBondTensorAutoCorr{
      interval                           100
      outputFileName  IntraBondTensorAutoCorr
      speciesId                            0
      capacity                           100
    }

    MdIntraBondStressAutoCorr{
      interval                           100
      outputFileName  IntraBondStressAutoCorr
      speciesId                            0
      capacity                           100
    }

  }
  saveInterval                  5000
  saveFileName               restart
}

